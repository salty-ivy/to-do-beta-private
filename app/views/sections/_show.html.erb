<div>  
    <%= turbo_frame_tag dom_id(section) do %>
        <br>
        <div>
            <strong><%= link_to section.name, edit_project_section_path(project, section) %></strong> 
            <%= button_to "Remove section", project_section_path(project, section), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
            <br>
        </div>
        <br>

        <%= turbo_frame_tag dom_id(section, "tasks") do %>
            <div>
                <%= render "tasks/index", section: section %>
            </div>
        <% end %>

        <br>
        <%= turbo_frame_tag dom_id(section.tasks.new, dom_id(section)) do %>
            <%= link_to "+ Add task", new_section_task_path(section) %>
        <% end %>
        <br>
    <% end %>
</div>

